---
import type { Collation } from '@types'

interface Props {
  tags: Collation<'posts'>[]
}

const { tags } = Astro.props
---

<div class="flex flex-wrap gap-3 text-sm">
  {tags.map((tag) => (
    <a
      href={tag.url}
      class="py-1 px-2 rounded-2xl border border-accent-border bg-accent-bg text-accent-text hover:bg-accent-bg-hover transition-colors"
    >
      {tag.title}
    </a>
  ))}
</div>

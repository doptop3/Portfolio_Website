---
import { Image } from 'astro:assets'
import GitHubActivityCalendar from '@components/GitHubActivityCalendar.astro'
import type { FrontmatterImage } from '@types'

interface Props {
  avatarImage?: FrontmatterImage
  githubCalendar?: string
}
const { avatarImage, githubCalendar } = Astro.props
---

<div class="my-6 md:mx-2">
  <div
    class="flex flex-col sm:flex-row items-center justify-around sm:gap-5 max-w-full mb-6 py-10 p-4 rounded-xl"
  >
    {
      avatarImage && (
        <Image
          src={avatarImage.src}
          alt={avatarImage.alt}
          class="rounded-full size-36 aspect-square box-content shrink-0"
          style={{ border: '8px solid color-mix(in srgb, var(--theme-accent) 15%, transparent)' }}
          widths={[288]}
          height={144}
          width={144}
        />
      )
    }
    <div>
      <div class:list={['m-4 max-w-full prose']}>
        <slot />
      </div>
    </div>
  </div>
  {githubCalendar && <GitHubActivityCalendar username={githubCalendar} />}
</div>

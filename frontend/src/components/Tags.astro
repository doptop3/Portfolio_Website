---
import type { Collation } from '@types'

interface Props {
  tags: Collation<'posts'>[]
}

const { tags } = Astro.props
---

<div class="flex flex-wrap gap-3 text-sm">
  {tags.map((tag) => (
    <a
      href={tag.url}
      class="py-1 px-3 rounded-2xl border border-accent/50 bg-accent/10 text-accent/90 hover:bg-accent/30 transition-colors"
    >
      {tag.title}
    </a>
  ))}
</div>

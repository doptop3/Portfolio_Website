---
import type { SocialLinks } from '@types'
import { Icon } from 'astro-icon/components'

interface Props {
  socialLinks: SocialLinks
}

const { socialLinks } = Astro.props
---

<div class="flex w-full max-w-md items-center justify-between">
  {
    socialLinks.github && (
      <a
        href={socialLinks.github}
        target="_blank"
        rel="noopener noreferrer"
        class="social-link"
      >
        <span class="sr-only">GitHub</span>
        <Icon name="github" class="size-7" />
      </a>
    )
  }
  {
    socialLinks.linkedin && (
      <a
        href={socialLinks.linkedin}
        target="_blank"
        rel="noopener noreferrer"
        class="social-link"
      >
        <span class="sr-only">LinkedIn</span>
        <Icon name="linkedin" class="size-7" />
      </a>
    )
  }
  {
    socialLinks.email && (
      <a
        href={`mailto:${socialLinks.email}`}
        target="_blank"
        rel="noopener noreferrer"
        class="social-link"
      >
        <span class="sr-only">Email</span>
        <Icon name="email" class="size-7" />
      </a>
    )
  }
  {
    socialLinks.rss && (
      <a href="/rss.xml" class="social-link">
        <span class="sr-only">RSS</span>
        <Icon name="rss" class="size-7" />
      </a>
    )
  }
</div>

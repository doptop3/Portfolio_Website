---
// Imports (keeping your pathing)
import type { MarkdownHeading } from 'astro'
import TOCHeading from '@components/TableOfContentsHeading.astro'
import type { TocItem } from '@types'

// Props typing
interface Props {
  headings: MarkdownHeading[]
}

// Destructure props
const { headings } = Astro.props

const tocItems: TocItem[] = headings.map((h) => ({
  ...h,
  children: []
}))

// Filter headings to only H2 and H3
const filteredHeadings = tocItems.filter(({ depth }) => depth >= 2 && depth <= 3)
---
<details
  open
  class="toc relative md:mx-2 xl:mx-0 text-sm px-8 xl:pr-0 py-6 mt-5 xl:mt-0 xl:w-full rounded-xl border-3 xl:border-none xl:sticky xl:top-10 xl:basis-[274px] 2xl:basis-[320px] xl:order-2 xl:shrink-0 xl:opacity-90"
  style={{
    color: 'color-mix(in srgb, var(--theme-foreground) 90%, transparent)',
    backgroundColor: 'color-mix(in srgb, var(--theme-foreground) 5%, transparent)',
    borderColor: 'color-mix(in srgb, var(--theme-accent) 10%, transparent)'
  }}
>
  <summary
    class="list-none marker:hidden marker:content-[''] before:content-['>'] before:text-accent before:font-semibold before:absolute before:left-3 cursor-pointer"
  >
    Table of Contents
  </summary>

  <nav class="w-full text-sm xl:-ml-1">
    <ul class="mt-4 flex flex-col max-w-full">
      {filteredHeadings.map((heading) => <TOCHeading heading={heading} />)}
    </ul>
  </nav>
</details>

<script>
  // Highlight headings on scroll
  const anchors = document.querySelectorAll('h2[id], h3[id]')
  const links = document.querySelectorAll('details.toc > nav > ul > li')

  if (anchors.length === links.length && anchors.length > 0) {
    window.addEventListener('scroll', () => {
      const scrollTop = window.scrollY
      let highlighted = false

      // iterate backwards for first match
      for (let i = anchors.length - 1; i >= 0; i--) {
        const anchor = anchors[i]
        if (!highlighted && scrollTop > (anchor as HTMLElement).offsetTop - 75) {
          links[i].classList.add('active-heading')
          highlighted = true
        } else {
          links[i].classList.remove('active-heading')
        }
      }
    })
  }
</script>

<style>
  details[open] summary:before {
    transform: rotate(90deg);
  }
</style>
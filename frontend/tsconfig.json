{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "noUnusedLocals": false,
    "target": "ESNext",
    "module": "Node16",   
    "moduleResolution": "Node16", 
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@types": ["src/types.ts"],
      "@content": ["src/content.config.ts"],
      "@utils": ["src/utils.ts"]
    },
      "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
  },
  "include": [
    "src",
    "src/types",
    "astro.config.ts",
    ".astro/types.d.ts",   
    "../backend/src/**/*",     
    "site.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}
